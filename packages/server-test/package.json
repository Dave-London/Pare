{
  "name": "@paretools/test",
  "version": "0.10.1",
  "mcpName": "io.github.Dave-London/pare-test",
  "description": "MCP server for test runners with structured, token-efficient output",
  "license": "MIT",
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "structured-output",
    "ai",
    "ai-agent",
    "claude",
    "cursor",
    "copilot",
    "token-efficient",
    "devtools",
    "cli",
    "testing",
    "pytest",
    "jest",
    "vitest",
    "mocha",
    "test-runner"
  ],
  "homepage": "https://github.com/Dave-London/Pare/tree/main/packages/server-test",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "bin": {
    "pare-test": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dave-London/Pare.git",
    "directory": "packages/server-test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "node ./scripts/run-tests.mjs",
    "test:unit": "vitest run --exclude __tests__/integration.test.ts --exclude __tests__/tool-params.test.ts --exclude __tests__/fidelity.test.ts",
    "test:integration": "vitest run __tests__/integration.test.ts __tests__/tool-params.test.ts",
    "test:fidelity": "vitest run __tests__/fidelity.test.ts",
    "test:watch": "vitest",
    "coverage": "node ./scripts/run-tests.mjs -- --coverage",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@paretools/shared": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@paretools/tsconfig": "workspace:*",
    "@types/node": "^25.2.3",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
