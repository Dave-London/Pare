{
  "name": "@paretools/build",
  "version": "0.2.0",
  "mcpName": "io.github.Dave-London/build",
  "description": "MCP server for build tools (tsc, esbuild, etc.) with structured, token-efficient output",
  "license": "MIT",
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "structured-output",
    "build",
    "typescript"
  ],
  "homepage": "https://github.com/Dave-London/pare/tree/main/packages/server-build",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "bin": {
    "pare-build": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dave-London/pare.git",
    "directory": "packages/server-build"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@paretools/shared": "workspace:*",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@paretools/tsconfig": "workspace:*",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
