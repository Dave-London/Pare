{
  "name": "@paretools/lint",
  "version": "0.3.0",
  "mcpName": "io.github.Dave-London/lint",
  "description": "MCP server for linters (ESLint, Prettier) with structured, token-efficient output",
  "license": "MIT",
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "structured-output",
    "eslint",
    "prettier",
    "linting"
  ],
  "homepage": "https://github.com/Dave-London/pare/tree/main/packages/server-lint",
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "bin": {
    "pare-lint": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dave-London/pare.git",
    "directory": "packages/server-lint"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@paretools/shared": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@paretools/tsconfig": "workspace:*",
    "@types/node": "^25.2.3",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
